<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<HBox fx:controller="com.delluna.dellunahotel.controllers.RoomCardController"
      alignment="CENTER_LEFT" onMouseClicked="#handleClick" styleClass="card"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    
    <padding><Insets bottom="15" left="20" right="20" top="15"/></padding>
    
    <children>
        <ImageView fx:id="roomImage" fitHeight="150" fitWidth="200" styleClass="card-image" />
        <Label fx:id="roomLabel" styleClass="card-title" />
    </children>
</HBox>
