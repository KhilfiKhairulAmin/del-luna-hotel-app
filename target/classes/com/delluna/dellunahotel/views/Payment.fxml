<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Separator?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.delluna.dellunahotel.controllers.PaymentController"
            prefWidth="800" prefHeight="600">

    <!-- Top: Title and Booking ID -->
    <top>
        <VBox spacing="5" style="-fx-padding: 20; -fx-background-color: white;">
            <Label text="Payment Summary" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Booking ID: " fx:id="bookingIdLabel" style="-fx-font-size: 14px;"/>
        </VBox>
    </top>

    <!-- Center: Details and Services -->
    <center>
        <HBox spacing="20" style="-fx-padding: 20;">
            <!-- Left: Booking Details -->
            <GridPane hgap="10" vgap="10">
                <Label text="Guest ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="guestIdLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Room Number:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label fx:id="roomNumLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Check-In:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label fx:id="checkInLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Check-Out:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Label fx:id="checkOutLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Right: Service TableView -->
            <TableView fx:id="servicesTable" prefWidth="300">
                <columns>
                    <TableColumn text="Service" fx:id="serviceNameCol" prefWidth="200"/>
                    <TableColumn text="Price" fx:id="servicePriceCol" prefWidth="100"/>
                </columns>
            </TableView>
        </HBox>
    </center>

    <!-- Right: Price Summary -->
    <right>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #f5f5f5;">
            <Label text="Summary" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label text="Room Cost:" fx:id="roomCostLabel"/>
            <Label text="Services Cost:" fx:id="serviceCostLabel"/>
            <Label text="Tax:" fx:id="taxLabel"/>
            <Label text="Discount:" fx:id="discountLabel"/>
            <Separator/>
            <Label text="Grand Total:" style="-fx-font-size: 16px; -fx-font-weight: bold;" fx:id="grandTotalLabel"/>
            <Label text="Points Earned:" fx:id="pointsLabel"/>
        </VBox>
    </right>

    <!-- Bottom: Actions -->
    <bottom>
        <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 20; -fx-background-color: white;">
            <Button text="Cancel" fx:id="cancelButton" prefWidth="100"/>
            <Button text="Pay Now" fx:id="payButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" prefWidth="120"/>
        </HBox>
    </bottom>
</BorderPane>
