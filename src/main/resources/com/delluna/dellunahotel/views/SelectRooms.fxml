<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="200" prefHeight="120" fx:controller="com.delluna.dellunahotel.controllers.SelectRoomController">
    <AnchorPane style="-fx-background-color: linear-gradient(to bottom right, #e0f7fa, #b2ebf2);
                        -fx-background-radius: 15;
                        -fx-border-radius: 15;
                        -fx-border-color: #00acc1;
                        -fx-border-width: 1;">
        <VBox alignment="CENTER" spacing="8" layoutX="10" layoutY="10">
            <Text text="Room #" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Text fx:id="roomNumText" style="-fx-font-size: 20px; -fx-fill: #00796b;" />
            <Text fx:id="floorLevelText" style="-fx-font-size: 14px; -fx-fill: #004d40;" />
            <Text fx:id="roomTypeText" style="-fx-font-size: 14px; -fx-fill: #004d40;" />
        </VBox>
        <effect>
        <DropShadow fx:id="dropShadow" color="#888888" radius="10" />
        </effect>
    </AnchorPane>
</AnchorPane>
